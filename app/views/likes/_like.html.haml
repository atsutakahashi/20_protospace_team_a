- if user_signed_in?
  - if prototype.like_user(current_user.id)
    =button_to prototype_like_path(like, prototype_id: prototype.id), class: "like-decrement", method: :delete, id: "like-button", remote: true do
      = image_tag("icon_red_heart.svg")
      %span.num LIKE #{prototype.like_counts}
  - else
    =button_to prototype_likes_path(prototype), class: "like-increment", id: "like-button", method: :post, remote: true do
      = image_tag("icon_gray_heart.svg")
      %span.num LIKE #{prototype.like_counts}
- else
  %button.like-increment#like-button
    = image_tag("icon_gray_heart.svg")
    %span.num LIKE #{prototype.like_counts}