.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to user_path(@prototype.user) do
            = image_tag(@prototype.user.avatar.thumb, alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px;")
        .media-body
          %h4#top-aligned-media.media-heading
            / view/shared/_headerからコピペしてとって来る？
            = @prototype.title
            - if user_signed_in?
              -if current_user == @prototype.user
                = link_to "編集", edit_prototype_path
                = link_to "削除", prototype_path, method: :delete
          .proto-user
            by
            = link_to "#{@prototype.user.name}", user_path(@prototype.user)
          .degree
            = @prototype.user.position
    .col-md-6
      #like-buttons
        = render partial:"likes/like", locals: { prototype: @prototype, likes: @likes, like: @like}
  .row
    .col-md-9.image-box
      = image_tag(@prototype.set_main_thumbnail.large, class: 'img-responsive img-size-fix', data: { prototype_id: "#{@prototype.id}" }, style: "margin: 0 auto;")
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototype.captured_images.sub.each do |image|
          %li.list-group-item
            = image_tag(image.content, class: 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.comments
    - if current_user
      .comment-form
        %h4 Comment
        / form_forに書き直す
        = form_tag("/prototypes/#{@prototype.id}/comments", method: :post, id: "new_comment") do
          %textarea{cols: "100", name: "text", placeholder: "コメントする", rows: "5" , class: "textbox"}
          %input{type: "submit", value: "SENT"}/

    - else
      %h4 Comment
      %textarea{cols: "100", name: "text", placeholder: "コメントする", rows: "5"}
      = link_to("/users/sign_in") do
        %input{type: "submit", value: "SENT"}/


    .comments-list
      %h4 Comment List
      - if @comments
        - @comments.each do |comment|
          %p
            %strong
              = link_to comment.user.name, "/users/#{comment.user_id}"
              ：
              = comment.text
              = link_to "編集",edit_prototype_comment_path(@prototype,comment.id),method: :get, class: "edit-function"
              = link_to '削除',prototype_comment_path(@prototype,comment.id),method: :delete, class: "delete-function"
